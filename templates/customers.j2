{% extends "layout.j2" %}
{% block content %}
<h2>Customers</h2>
<br>
<br>
<h4><a href="/add_customer">Add Customer</a></h4>
<br>
<table>
    <tr>
    {% for key in customers[0].keys() %}
    <th> {{ key }} </th>
    {% endfor %}
    </tr>
    {% for customer in customers %}
        <tr>
        {% for key in customer.keys() %}
            <td> {{ customer[key] }} </td>
        {% endfor %}
        <td> <form action ="/update_customer/{{ customer['Customer_id'] }}">
                <input type="submit" value="Update"></form></td>
        <td> <button type="button">Delete</button> </td>
        </tr>
    {% endfor %}
{% endblock %}