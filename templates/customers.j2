{% extends "layout.j2" %}
{% block content %}
<div class="pageContent">
<h2>Customers</h2>
<br>
<br>
<h4><a href="/add_customer"><button>Add Customer</button></a></h4>
<br>
<table>
    <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Phone</th>
    </tr>
    {% for customer in customers %}
        <tr>
        {% for key in customer.keys() %}
            <td> {{ customer[key] }} </td>
        {% endfor %}
        <td> <form action ="/update_customer/{{ customer['Customer_id'] }}">
                <input type="submit" value="Update"></form></td>
        </tr>
    {% endfor %}
</div>
{% endblock %}
