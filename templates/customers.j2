{% extends "layout.j2" %}
{% block content %}
<h2>Customers</h2>
<br>
<br>
<h4>Add Customer:</h4>
<form action="/customers" method="POST">
   Name: <input type="text" name="cname" required>
   Phone number: <input type="text" name="cphone" required>
   <input type="submit" value="Submit">
  </form>
<br>
<table>
    <tr>
    {% for header in headers %}
    <th> {{ header }} </th>
    {% endfor %}
    </tr>
    {% for row in rows %}
        <tr>
        {% for cell in row %}
            <td> {{ cell }} </td>
        {% endfor %}
        <td> <button type="button">Update</button> </td>
        <td> <button type="button">Delete</button> </td>
        </tr>
    {% endfor %}
{% endblock %}