{% extends "layout.j2" %}
{% block content %}
<h2>Suppliers</h2>
<br>
<br>
<h4>Add Supplier:</h4>
<form action="/suppliers" method="POST">
   Name: <input type="text" name="sname" required>
   Location: <input type="text" name="sloc" required>
   Phone number: <input type="text" name="sphone" required>
   <input type="submit" value="Submit">
  </form>
<br>
<table>
    <tr>
    {% for header in headers %}
    <th> {{ header }} </th>
    {% endfor %}
    </tr>
    {% for row in rows %}
        <tr>
        {% for cell in row %}
            <td> {{ cell }} </td>
        {% endfor %}
        <td> <button type="button">Update</button> </td>
        <td> <button type="button">Delete</button> </td>
        </tr>
    {% endfor %}
{% endblock %}