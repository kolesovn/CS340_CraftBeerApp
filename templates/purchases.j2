{% extends "layout.j2" %}
{% block content %}
<div class="pageContent">
<h2>Purchases</h2>
<br>
<br>
<h4><a href="add_purchase"><button>Add Purchase</button></a></h4>
<br>
<table>
    <tr>
    <th>ID</th>
    <th>Supplier</th>
    <th>Date</th>
    </tr>
    {% for purchase in purchases %}
        <tr>
        {% for key in purchase.keys() %}
            {% if key == 'Supplier_id'%}
            <td> {{ supplier_names[purchase['Supplier_id']] }}
            {% else %}
            <td> {{ purchase[key] }} </td>
            {% endif %}
        {% endfor %}
        </tr>
    {% endfor %}
</div>
{% endblock %}
