{% extends "layout.j2" %}
{% block content %}
<h2>Products</h2>
<br>
<br>
<h4>Add Product:</h4>
<form action="/products" method="POST">
   Name: <input type="text" name="pname" required>
   Supplier ID: <input type="text" name="p_sid" required>
   Unit Cost: <input type="text" name="p_cost" required><br>
   Unit Price: <input type="text" name="p_price" required>
   Quantity: <input type="text" name="p_quan" required>
   <input type="submit" value="Submit">
  </form>
<br>
<table>
    <tr>
    {% for header in headers %}
    <th> {{ header }} </th>
    {% endfor %}
    </tr>
    {% for row in rows %}
        <tr>
        {% for cell in row %}
            <td> {{ cell }} </td>
        {% endfor %}
        <td> <button type="button">Update</button> </td>
        <td> <button type="button">Delete</button> </td>
        </tr>
    {% endfor %}
{% endblock %}