{% extends "layout.j2" %}
{% block content %}
<h2>Orders</h2>
<br>
<br>
<h4>Add Order:</h4>
<form action="/orders" method="POST">
   Customer ID: <input type="text" name="ord_cid" required>
   Date: <input type="text" name="ord_date" required>
   <input type="submit" value="Submit">
  </form>
<br>

<table>
    <tr>
    {% for header in headers %}
    <th> {{ header }} </th>
    {% endfor %}
    </tr>
    {% for row in rows %}
        <tr>
        {% for cell in row %}
            <td> {{ cell }} </td>
        {% endfor %}
        <td> <button type="button">Update</button> </td>
        <td> <button type="button">Delete</button> </td>
        </tr>
    {% endfor %}
{% endblock %}